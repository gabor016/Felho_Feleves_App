<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Versenybeosztó – Pástok</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js"></script>
  <style>
    body { 
      background-color:#ffffff; 
      color:#333333; 
      font-family:'Montserrat', sans-serif; 
    }
    .pasta { 
      border:2px solid #ddd; 
      border-radius:8px; 
      padding:15px; 
      margin-bottom:15px; 
      background-color:#f8f9fa;
    }
    .match-panel, .result-panel { 
      background-color:#e9ecef; 
      border-radius:6px; 
      padding:10px; 
      margin-bottom:10px; 
      display:flex; 
      flex-direction:column; 
      gap:5px; 
    }
    .players-row { 
      display:flex; 
      justify-content:space-between; 
      align-items:center; 
    }
    .player-card { 
      background-color:#ffffff; 
      border-radius:6px; 
      padding:8px; 
      flex:1; 
      text-align:center; 
      margin:0 5px; 
      display:flex; 
      flex-direction:column; 
      align-items:center; 
      box-shadow:0 2px 6px rgba(0,0,0,0.1);
      transition: transform 0.2s;
    }
    .player-card:hover { transform: scale(1.03); }
    .score-btn { width:35px; margin:2px; }
    .score-display { text-align:center; font-weight:bold; font-size:1.1rem; margin:10px 0; }
    .btn-sm { padding:0.25rem 0.5rem; font-size:0.75rem; }
    .winner { border:2px solid #0d6efd; }
    .avatar { width:50px; height:50px; border-radius:50%; margin-bottom:5px; }
  </style>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light mb-4 shadow-sm">
  <div class="container">
    <a class="navbar-brand fw-bold" href="/">
      <img src="/images/fencing-icon.png" alt="" width="32" height="32" class="d-inline-block align-text-top me-2">
      Vívó Dashboard
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto">
        <li class="nav-item"><a class="nav-link" href="/">Főoldal</a></li>
        <li class="nav-item"><a class="nav-link" href="/tournament">Versenybeosztó</a></li>
      </ul>
    </div>
  </div>
</nav>

<div class="container py-4">
  <h1 class="mb-4">Versenybeosztó – Pástok</h1>
  <div class="row">
    <!-- Sportolók pool -->
    <div class="col-md-3">
      <h5>Sportolók</h5>
      <div id="athlete-pool" class="list-group">
        <% athletes.forEach(a => { %>
          <div class="list-group-item card p-2 mb-2" data-id="<%= a.id %>">
            <img class="avatar" src="<%= a.image || '/images/default-avatar.png' %>">
            <span class="player-name"><%= a.name %> (<%= a.weapon %>)</span>
          </div>
        <% }) %>
      </div>
    </div>

    <!-- Pástok és eredmények -->
    <div class="col-md-9">
      <% for(let p=0;p<3;p++){ %>
        <div class="pasta">
          <h5 class="mb-3">Pást <%= p+1 %></h5>
          <div class="match-container d-flex flex-column gap-2"></div>
          <h6 class="mt-2">Eredmények</h6>
          <div class="result-container d-flex flex-column gap-2"></div>
        </div>
      <% } %>
    </div>
  </div>
</div>

<script>
new Sortable(document.getElementById('athlete-pool'), {group:'shared', animation:150, sort:false});

document.querySelectorAll('.match-container').forEach(container=>{
  const resultContainer = container.parentElement.querySelector('.result-container');

  new Sortable(container, {
    group:'shared',
    animation:150,
    sort:false,
    onAdd: function(evt){
      if(container.querySelector('.match-panel')) { evt.from.appendChild(evt.item); return; }
      const items = Array.from(container.children);
      if(items.length < 2) return;

      const panel = document.createElement('div');
      panel.className='match-panel';

      const player1Elem = items[items.length-2];
      const player2Elem = items[items.length-1];

      let score1=0, score2=0;
      const scoreDisplay = document.createElement('div');
      scoreDisplay.className='score-display';
      scoreDisplay.textContent = score1+' - '+score2;

      function createPlayerCard(elem){
        const div = document.createElement('div');
        div.className='player-card';
        const img = document.createElement('img'); img.className='avatar'; img.src = elem.querySelector('img').src;
        const nameSpan = document.createElement('span'); nameSpan.textContent = elem.querySelector('.player-name').textContent;
        div.appendChild(img); div.appendChild(nameSpan);
        const controls = document.createElement('div'); controls.style.marginTop='5px';
        const plusBtn = document.createElement('button'); plusBtn.className='btn btn-sm btn-success score-btn'; plusBtn.textContent='+';
        const minusBtn = document.createElement('button'); minusBtn.className='btn btn-sm btn-danger score-btn'; minusBtn.textContent='-';
        controls.appendChild(plusBtn); controls.appendChild(minusBtn);
        div.appendChild(controls);
        plusBtn.addEventListener('click',()=>{ if(div===player1Div) score1++; else score2++; scoreDisplay.textContent = score1+' - '+score2; });
        minusBtn.addEventListener('click',()=>{ if(div===player1Div) score1--; else score2--; if(score1<0) score1=0; if(score2<0) score2=0; scoreDisplay.textContent = score1+' - '+score2; });
        return div;
      }

      const player1Div = createPlayerCard(player1Elem);
      const player2Div = createPlayerCard(player2Elem);

      const playersRow = document.createElement('div'); playersRow.className='players-row';
      playersRow.appendChild(player1Div); playersRow.appendChild(scoreDisplay); playersRow.appendChild(player2Div);

      const finishBtn = document.createElement('button'); finishBtn.className='btn btn-sm btn-warning mt-2 w-100'; finishBtn.textContent='Lezárás';
      finishBtn.addEventListener('click', async ()=>{
        const resultPanel = document.createElement('div'); resultPanel.className='result-panel';
        const resultPlayersRow = document.createElement('div'); resultPlayersRow.className='players-row';
        const resultPlayer1 = player1Div.cloneNode(true); const resultPlayer2 = player2Div.cloneNode(true);
        resultPlayer1.querySelector('div')?.remove(); resultPlayer2.querySelector('div')?.remove();
        if(score1>score2) resultPlayer1.classList.add('winner'); else if(score2>score1) resultPlayer2.classList.add('winner');
        resultPlayersRow.appendChild(resultPlayer1);
        const resultScore = document.createElement('div'); resultScore.className='score-display'; resultScore.textContent = score1+' - '+score2;
        resultPlayersRow.appendChild(resultScore); resultPlayersRow.appendChild(resultPlayer2);
        resultPanel.appendChild(resultPlayersRow);
        resultContainer.appendChild(resultPanel);

        // Mentés backendbe
        const payload = {
          pasta: container.parentElement.querySelector('h5').textContent,
          player1: { name: player1Elem.querySelector('.player-name').textContent, score: score1 },
          player2: { name: player2Elem.querySelector('.player-name').textContent, score: score2 }
        };
        try {
          await fetch('/api/results', { method:'POST', headers:{'Content-Type':'application/json'}, body:JSON.stringify(payload) });
          console.log('Eredmény mentve');
        } catch(err) { console.error('Hiba az eredmény mentésekor:', err); }

        document.getElementById('athlete-pool').appendChild(player1Elem);
        document.getElementById('athlete-pool').appendChild(player2Elem);
        panel.remove();
      });

      panel.appendChild(playersRow); panel.appendChild(finishBtn); container.appendChild(panel);
      player1Elem.remove(); player2Elem.remove();
    }
  });
});
</script>
</body>
</html>
